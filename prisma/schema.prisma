// Run `npx prisma format` after making changes to this file
// Run `npx prisma migrate dev --name <name>` : to create a migration
// npx prisma migrate reset : to reset the database

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                            Int     @id @default(autoincrement())
  email                         String  @unique
  name                          String
  password                      String
  createdAt                     DateTime @default(now())
  updatedAt                     DateTime @updatedAt
  twoFactorAuthenticationSecret String?
  isTwoFAEnabled                Boolean @default(false)
  messages                      Message[]
}

model Question {
  id       Int      @id @default(autoincrement())
  title    String
  choices  Choice[]
  answer   String
  imageUrl String
  messages  Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  question  Question @relation(fields: [questionId], references: [id])
  questionId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Indicator {
  HAPPY
  ENJOYMENT
  MONEY
}

model Choice {
  id                    Int                    @id @default(autoincrement())
  text                  String
  question              Question               @relation(fields: [questionId], references: [id])
  questionId            Int
  indicatorCoefficients IndicatorCoefficient[]
}

model IndicatorCoefficient {
  id          Int       @id @default(autoincrement())
  indicator   Indicator
  coefficient Float
  choiceId    Int
  choice      Choice    @relation(fields: [choiceId], references: [id])
}
